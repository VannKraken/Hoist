@using Microsoft.AspNetCore.Identity;
@model IEnumerable<Hoist.Models.Ticket>
@inject UserManager<BTUser> _UserManager

@{
    ViewData["Title"] = "Tickets";
    Layout = "_LayoutDashboard";
}

@{
    string? userId = _UserManager.GetUserId(User);

    IEnumerable<Ticket> activeTickets = Model.Where(t => t.Archived == false);
    IEnumerable<Ticket> inProgTickets = Model.Where(t => t.Archived == false && t.DeveloperUserId != null);
    IEnumerable<Ticket> assignedTickets = Model.Where(t => t.Archived == false && t.DeveloperUserId == userId);
    IEnumerable<Ticket> archivedTickets = Model.Where(t => t.Archived == true);
}



