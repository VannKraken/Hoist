    <script>
        $(document).ready(function () {
            $('#mySelect').select2({
                placeholder: 'Select options',
                closeOnSelect: false,
                templateResult: formatState,
                templateSelection: formatState
            });

            function formatState(state) {
                if (!state.id) {
                    return state.text;
                }
                var $state = $(
                    '<span><input type="checkbox" class="mr-2" /> ' + state.text + '</span>'
                );
                return $state;
            }
        });
    </script>

