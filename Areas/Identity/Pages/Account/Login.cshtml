@page
@model LoginModel

@{
    ViewBag.Title = "Sign In";
    Layout = null;
}

<!doctype html>
<html lang="en" data-layout="vertical" data-layout-style="detached" data-sidebar="light" data-topbar="dark" data-sidebar-size="lg">
<head>
    @Html.Partial("~/Views/Shared/_title_meta.cshtml")
    @Html.Partial("~/Views/Shared/_head_css.cshtml")
</head>
<body>

    <div class="auth-page-wrapper pt-5">
        <!-- auth page bg -->
        <div class="auth-one-bg-position auth-one-bg" id="auth-particles">
            <div class="bg-overlay"></div>

            <div class="shape">
                <svg xmlns="http://www.w3.org/2000/svg" version="1.1" xmlns:xlink="http://www.w3.org/1999/xlink" viewBox="0 0 1440 120">
                    <path d="M 0,36 C 144,53.6 432,123.2 720,124 C 1008,124.8 1296,56.8 1440,40L1440 140L0 140z"></path>
                </svg>
            </div>
        </div>

        <!-- auth page content -->
        <div class="auth-page-content">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="text-center mt-sm-5 mb-4 text-white-50">
                            <div>
                                <a href="@Url.Action("Index", "Home")" class="d-inline-block auth-logo">

                                    <img src="~/assets/images/logo-light.png" alt="" height="50">
                                </a>
                            </div>
                            <p class="mt-3 fs-15 fw-medium">Raise the Flag</p>
                        </div>
                    </div>
                </div>
                <!-- end row -->

                <div class="row justify-content-center">
                    <div class="col-md-8 col-lg-6 col-xl-5">
                        <div class="card mt-4">

                            <div class="card-body p-4">
                                <div class="text-center mt-2">
                                    <h5 class="text-primary">Welcome Back !</h5>
                                    <p class="text-muted">Sign in to continue to your Dashboard.</p>
                                </div>
                                <div class="p-2 mt-4">
                                    <form id="account" method="post">

                                        <div class="mb-3">
                                            <label asp-for="Input.Email" class="form-label">Email</label>
                                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com">
                                        </div>

                                        <div class="mb-3">
                                            <div class="float-end">
                                                <a id="forgot-password" asp-page="./ForgotPassword" class="text-muted">Forgot password?</a>
                                            </div>
                                            <label asp-for="Input.Password" class="form-label">Password</label>
                                            <div class="position-relative auth-pass-inputgroup mb-3">
                                                <input asp-for="Input.Password" type="password" class="form-control pe-5 password-input" autocomplete="current-password" aria-required="true" placeholder="password" id="password-input">
                                                <button class="btn btn-link position-absolute end-0 top-0 text-decoration-none text-muted password-addon" type="button" id="password-addon"><i class="ri-eye-fill align-middle"></i></button>
                                            </div>
                                        </div>

                                        <div class="form-check">
                                            <input class="form-check-input" asp-for="Input.RememberMe" type="checkbox" value="" id="auth-remember-check">
                                            <label class="form-check-label" asp-for="Input.RememberMe" for="auth-remember-check">Remember me</label>
                                        </div>

                                        <div class="mt-4 mb-3">
                                            <button class="btn btn-info w-100" type="submit">Sign In</button>
                                        </div>
                                    </form>


                                        

                            @*            <div class="mb-3 text-center">
                                            <h5 class="text-primary">Want to try it out?</h5>
                                            <p class="text-muted">Use one of our demo accounts below.</p>
                                            <hr />
                                            <form class="" id="demo-accounts" method="post">
                                                <div class="form-group">
                                                    <div class="row">
                                                        <div class="col-12 btn-block w-100">
                                                            <button type="submit" style="width:inherit;height:min-content" class="btn btn-info mt-2" name="demoEmail" value="DemoAdminEmail">Demo Admin</button>
                                                            <button type="submit" style="width:inherit;height:min-content" class="btn btn-info mt-2" name="demoEmail" value="DemoPMEmail">Demo PM</button>
                                                            <button type="submit" style="width:inherit;height:min-content" class="btn btn-info mt-2" name="demoEmail" value="DemoDevEmail">Demo Developer</button>
                                                            <button type="submit" style="width:inherit;height:min-content" class="btn btn-info mt-2" name="demoEmail" value="DemoSubEmail">Demo Submitter</button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
*@


                                </div>
                            </div>
                            <!-- end card body -->
                        </div>
                        <!-- end card -->
                        @*<div class="mt-4 text-center">
                        <p class="mb-0">Don't have an account ? <a href="@Url.Action("SignUpBasic", "Authentication")" class="fw-semibold text-primary text-decoration-underline"> Signup </a> </p>
                        </div>*@

                    </div>
                </div>
                <!-- end row -->
            </div>
            <!-- end container -->
        </div>
        <!-- end auth page content -->
        <!-- footer -->
        <footer class="footer">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="text-center">
                            <p class="mb-0 text-muted">&copy; <script>document.write(new Date().getFullYear())</script> Hoist</p>
                        </div>
                    </div>
                </div>
            </div>
        </footer>
        <!-- end Footer -->
    </div>
    <!-- end auth-page-wrapper -->
    @Html.Partial("~/Views/Shared/_vendor_scripts.cshtml")

    <!-- particles js -->
    <script src="~/assets/libs/particles.js/particles.js"></script>
    <!-- particles app js -->
    <script src="~/assets/js/pages/particles.app.js"></script>
    <!-- password-addon init -->
    <script src="~/assets/js/pages/password-addon.init.js"></script>

</body>
</html>





@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
